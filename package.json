{
  "name": "repobot",
  "version": "0.1.0",
  "description": "AI assistant for managing development processes in Git repositories",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "repobot": "src/cli/index.js"
  },
  "scripts": {
    "start": "node src/cli/index.js",
    "typecheck": "tsc --noEmit",
    "test": "node --test tests/",
    "lint": "eslint src/ tests/",
    "format": "prettier --write src/ tests/",
    "prepare": "husky install"
  },
  "keywords": [
    "ai",
    "git",
    "task-management",
    "reporting",
    "telegram",
    "automation"
  ],
  "author": "team@rnd-pro.com",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "grammy": "^1.19.2",
    "ignore": "^5.3.2",
    "node-cron": "^3.0.3",
    "simple-git": "^3.22.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
